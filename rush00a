#include <unistd.h>

void ft_putchar(int c);

void rush(int x, int y) //x=columns y=rows  vertical=a horizontal=b
{
int a;
int b;

b = 1;

while (b <= y)
{
	a=1;
	while (a <= x)
		{
			if (b ==1)
				{
					 if (a==1 )
					 {ft_putchar(65);
					 }
					 else if (a==x)
					 {ft_putchar('C');
					 }
					else
					{ft_putchar(66);
					}

		        }
			else
			{
				if (b==y)
				{
					if(a==1)
					{ft_putchar('C');
					}
				   else if(a==x)
                {ft_putchar(65);
                }
					else
					{ft_putchar(66);}
				}
			else if(a==1 || a==x)
            {
             ft_putchar(66);
                    }
				else
				{
				ft_putchar(32);// hollow space
				}
				}
				a++;


		}

	ft_putchar(10);//newline
	b++;
}
}
